{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Publish All Platforms",
      "type": "shell",
      "command": "./publish-all.sh",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Publish Windows x64",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "publish",
        "azdo-wi-creator/azdo-wi-creator.csproj",
        "--configuration",
        "Release",
        "--runtime",
        "win-x64",
        "--self-contained",
        "true",
        "--output",
        "publish/win-x64",
        "/p:PublishSingleFile=true",
        "/p:PublishTrimmed=false",
        "/p:IncludeNativeLibrariesForSelfExtract=true"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
